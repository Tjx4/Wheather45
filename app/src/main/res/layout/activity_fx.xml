<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import
            type="android.text.Html"/>
        <variable
            name="fxViewModel"
            type="com.platform45.weather45.features.fx.FxViewModel"/>
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".features.fx.FxActivity">

            <TextView
                style="@style/MediumTextView"
                android:id="@+id/tvConversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="-> ZARUSD"
                android:textStyle="bold"
                android:text="@{`->` +fxViewModel.tradingPair}"
                android:layout_margin="@dimen/medium_margin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imbSearch"
                app:layout_constraintBottom_toBottomOf="@+id/imbSearch"/>

            <ImageButton
                android:id="@+id/imbSearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_search"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_margin="@dimen/small_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvtrades"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/medium_margin"
                app:layout_constraintTop_toBottomOf="@+id/tvConversion"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>