<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/SmallTextView"
        android:id="@+id/tvPair"
        android:layout_width="105dp"
        android:layout_height="40dp"
        tools:text="USDZAR"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginLeft="@dimen/xsmall_margin"
        android:textColor="@color/lightText"
        android:background="@drawable/rounded_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/btnAddCurrencyPair"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:paddingHorizontal="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="@+id/tvPair"
        app:layout_constraintBottom_toBottomOf="@+id/tvPair"
        app:layout_constraintRight_toRightOf="@+id/tvPair"/>

</androidx.constraintlayout.widget.ConstraintLayout>