<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import
            type="android.text.Html"/>
        <variable
            name="fxViewModel"
            type="com.platform45.weather45.features.fx.FxViewModel"/>
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".features.fx.FxActivity">

            <TextView
                style="@style/MediumTextView"
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ZARUSD"
                android:text="@{fxViewModel.tradingPair}"
                android:layout_margin="@dimen/medium_margin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                style="@style/MediumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="from: 00-00-00 to 00-00-00"
                android:text="@{`from: `+ fxViewModel.from + `| to: `+ fxViewModel.to }"
                android:layout_margin="@dimen/medium_margin"
                app:layout_constraintLeft_toRightOf="@+id/tvPrice"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.github.mikephil.charting.charts.CandleStickChart
                android:id="@+id/candleStickChart"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>