<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather45" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/light_background</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="ThemeColors">
        <item name="android:textColor">@color/lightText</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColor">@color/gold_1</item>
        <item name="android:textColorPrimary">@color/lightText</item>
        <item name="colorOnPrimary">@color/lightText</item>
        <item name="titleTextColor">@color/lightText</item>
        <item name="android:background">@color/splashGradientStart</item>
    </style>

    <style name="BaseTextView" parent="ThemeColors">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LargeTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MediumTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SmallTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FX45Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/fx_button_background</item>
    </style>

    <style name="FX4EditText" parent="ThemeColors">
        <item name="android:textColor">@color/lightText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">@dimen/xsmall_margin</item>
    </style>

    <style name="DatePreview" parent="ThemeColors">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/date_preview_background</item>
        <item name="android:padding">@dimen/xsmall_margin</item>
    </style>

    <style name="ParentView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dark_ackground</item>
    </style>

    <style name="DateTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:headerBackground">@color/teal_700</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:background">@color/dark_background_2</item>
        <!--
        <item name="android:scaleX">1.0</item>
        <item name="android:scaleY">0.80</item>
         -->
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/dark_background_2</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#666</item>
    </style>

    <style name="SelectableItemTheme2">
        <item name="colorControlHighlight">#222</item>
    </style>

    <style name="PairItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/pair_item_background</item>
    </style>

    <style name="PairItem2Background">
        <item name="android:theme">@style/SelectableItemTheme2</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/cp_background</item>
    </style>

</resources>